<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- button pressionado -->
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#8c691e" />
            <gradient android:angle="-90" android:startColor="#ae4511" android:endColor="#f4935f"  />
        </shape>
    </item>

    <!-- contorno do mesmo -->
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#8c691e" />
            <solid android:color="#ea504d"/>
        </shape>
    </item>

    <!-- button comum, sem ação -->
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#8c691e" />
            <gradient android:angle="-90" android:startColor="#ae4511" android:endColor="#f4935f" />
        </shape>
    </item>

</selector>